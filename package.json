{
  "name": "bost-boasts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "npm run typegen",
    "dev": "next dev",
    "prebuild": "npm run typegen",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "typegen": "sanity schema extract --path=sanity/extract.json && sanity typegen generate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome format --write",
      "biome check --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "^1.2.0",
    "@sanity/vision": "^4.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next": "16.1.4",
    "next-sanity": "^12.0.16",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sanity": "^4.22.0",
    "styled-components": "^6.3.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.19.30",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
