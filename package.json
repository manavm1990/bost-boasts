{
  "name": "bost-boasts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "bun run typegen",
    "dev": "next dev",
    "prebuild": "bun run typegen",
    "build": "next build",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "typegen": "bunx sanity@latest schema extract --enforce-required-fields --path=sanity/extract.json && bunx sanity@latest typegen generate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "biome format --write",
      "biome check --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@sanity/client": "^7.14.1",
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "^2.0.3",
    "@sanity/vision": "^5.8.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "next": "16.1.4",
    "next-sanity": "^12.1.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "sanity": "^5.8.1",
    "styled-components": "^6.3.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.19.32",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
